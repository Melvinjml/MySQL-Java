package nombre.de.su.paquete;

import java.sql.*;

public class ConexionDB {

    public static final String USUARIO = "usuario de su base de datos";
    public static final String PASSWORD = "password de su base de datos";
    public static final String DATABASE = "nombre del proyecto de la base de datos";
    public static final String HOTS = "localhost";
    public static final String URL = "jdbc:mysql://" + HOTS + "/" + DATABASE;
    public static final String CLASS_NAME = "com.mysql.jdbc.Driver";

    private static Connection conn = null;


    /*------------------------------------------------------------------------------------------------------------------------------------------------------------*/
 /*------------------------------------------------------------------------------------------------------------------------------------------------------------*/
 /*------------------------------------------------------------------------------------------------------------------------------------------------------------*/
    /*Constructor*/
    
    public ConexionDB() {

        try {
            Class.forName(CLASS_NAME);
        } catch (ClassNotFoundException ex) {
            System.err.println("Error: " + ex);
        }

        try {
            conn = DriverManager.getConnection(URL, USUARIO, PASSWORD);
            System.out.println("***CONECTADO***");

        } catch (SQLException e) {

            System.err.println("Error" + e);
        }

    }

    /*------------------------------------------------------------------------------------------------------------------------------------------------------------*/
 /*------------------------------------------------------------------------------------------------------------------------------------------------------------*/
 /*------------------------------------------------------------------------------------------------------------------------------------------------------------*/
 
    public Connection getConnection() {

        return conn;
    }

    /*------------------------------------------------------------------------------------------------------------------------------------------------------------*/
 /*------------------------------------------------------------------------------------------------------------------------------------------------------------*/
 /*------------------------------------------------------------------------------------------------------------------------------------------------------------*/
 

}
